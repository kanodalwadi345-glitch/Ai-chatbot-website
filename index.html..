<script>
/* ===== STARFIELD BG ===== */
(() => {
  const c=document.getElementById('stars'),x=c.getContext('2d');
  function size(){c.width=innerWidth;c.height=innerHeight} size(); addEventListener('resize',size);
  const N=170, s=Array.from({length:N},()=>({x:Math.random()*c.width,y:Math.random()*c.height,z:Math.random()*2+.4,r:Math.random()*1.2+.3}));
  (function tick(){
    requestAnimationFrame(tick); x.clearRect(0,0,c.width,c.height);
    for(const a of s){a.x+=a.z; if(a.x>c.width) a.x=0;
      x.globalAlpha=.5+Math.sin((a.x+a.y).01).25; x.beginPath(); x.arc(a.x,a.y,a.r,0,Math.PI*2); x.fillStyle="#9fd8ff"; x.fill();
    }
  })();
})();

/* ===== BASIC ROUTER (hash) ===== */
const routes={
  home:document.getElementById('route-home'),
  projects:document.getElementById('route-projects'),
  services:document.getElementById('route-services'),
  contact:document.getElementById('route-contact')
};
const projectsOutlet=document.getElementById('projects-outlet');
const servicesOutlet=document.getElementById('services-outlet');
const tabs=[...document.querySelectorAll('.tab')];
function setActiveTab(hash){ tabs.forEach(t=>t.classList.toggle('active',t.dataset.route===hash)); }
function show(route,anim="in"){
  for(const [k,el] of Object.entries(routes)){
    if(el===route){ el.hidden=false; el.classList.remove('in','flip','slide','zoom'); void el.offsetWidth; el.classList.add(anim); }
    else el.hidden=true;
  }
}
function navigate(hash){
  if(!hash||hash==="#") hash="#/home";
  const parts=hash.split('/').filter(Boolean); // ['#','home','sub','sub2']
  const base=parts[1]||'home'; const sub=parts[2]||null;
  setActiveTab(#/${base});
  const animMap={home:"in",projects:"flip",services:"slide",contact:"zoom"};
  show(routes[base],animMap[base]||"in");

  // Project sub-routes
  if(base==='projects'){
    if(!sub){ projectsOutlet.innerHTML=<p class="muted">Pick a project to open below.</p>; return; }
    if(sub==='qr') renderQR();
    else if(sub==='demo') renderDemo();
    else if(sub==='gallery') renderGallery();
  }

  // Service sub-routes
  if(base==='services'){
    if(!sub){ servicesOutlet.innerHTML=<p class="muted">Select a service to see details.</p>; return; }
    if(sub==='web') renderService('Web Design',[
      ['Starter','â‚¹9,999','1-page landing, mobile-first, deploy'],
      ['Pro','â‚¹24,999','Multi-page + CMS, animations'],
      ['Elite','â‚¹49,999','Custom SPA, performance + SEO']
    ]);
    else if(sub==='brand') renderService('Branding',[
      ['Logo Kit','â‚¹7,999','Logo + colors + typography'],
      ['Brand Pack','â‚¹19,999','Styleguide + assets'],
      ['Full Identity','â‚¹39,999','End-to-end branding']
    ]);
    else if(sub==='seo') renderService('SEO Boost',[
      ['Audit','â‚¹6,999','Core vitals + report'],
      ['Optimize','â‚¹14,999','Fix issues + speed'],
      ['Grow','â‚¹29,999','Content + on-page plan']
    ]);
  }
}
addEventListener('hashchange',()=>navigate(location.hash));
document.querySelectorAll('[data-route]').forEach(el=>el.addEventListener('click',()=>location.hash=el.dataset.route));
navigate(location.hash);

/* ===== PROJECT SUB-PAGES ===== */
function renderQR(){
  projectsOutlet.innerHTML=`
    <h3>QR Generator</h3>
    <div class="glass" style="display:grid;gap:12px">
      <input id="qrText" class="input" placeholder="Type text or URLâ€¦" />
      <div style="display:flex;gap:8px;flex-wrap:wrap">
        <select id="qrSize" class="input" style="max-width:140px">
          <option>150</option><option selected>200</option><option>256</option><option>300</option><option>400</option>
        </select>
        <button class="btn" id="makeQR">Generate</button>
        <a id="dlQR" class="btn" download="qr.png">Download</a>
        <button class="btn" data-route="#/projects">Back</button>
      </div>
      <div id="qrBox" class="glass" style="place-self:center;padding:12px;border-radius:16px"></div>
      <p class="muted">Uses a free public QR API (works on GitHub Pages).</p>
    </div>`;
  document.getElementById('makeQR').onclick=()=>{
    const t=encodeURIComponent(document.getElementById('qrText').value||location.href);
    const s=document.getElementById('qrSize').value;
    const url=https://api.qrserver.com/v1/create-qr-code/?size=${s}x${s}&data=${t};
    document.getElementById('qrBox').innerHTML=<img src="${url}" width="${s}" height="${s}" alt="QR"/>;
    document.getElementById('dlQR').href=url;
  }
}
function renderDemo(){
  projectsOutlet.innerHTML=`
    <h3>Interactive Demo</h3>
    <div class="grid" style="grid-template-columns:1fr 1fr;gap:12px">
      <div class="glass">
        <h4>Counter</h4>
        <div style="display:flex;align-items:center;gap:10px">
          <button class="btn" id="d2">âˆ’</button>
          <div id="c2" style="font-size:28px;min-width:60px;text-align:center">0</div>
          <button class="btn" id="i2">+</button>
        </div>
      </div>
      <div class="glass">
        <h4>Accent Color</h4>
        <input type="color" id="picker" value="#62d0ff"/>
        <button class="btn" id="apply">Apply</button>
      </div>
    </div>
    <div style="margin-top:10px"><button class="btn" data-route="#/projects">Back</button></div>`;
  let c=0; const c2=document.getElementById('c2');
  document.getElementById('i2').onclick=()=>{c++;c2.textContent=c}
  document.getElementById('d2').onclick=()=>{c=Math.max(0,c-1);c2.textContent=c}
  document.getElementById('apply').onclick=()=>{document.documentElement.style.setProperty('--pri',document.getElementById('picker').value)}
}
function renderGallery(){
  projectsOutlet.innerHTML=`
    <h3>3D Gallery</h3>
    <div id="gal" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(180px,1fr));gap:12px;perspective:1000px">
      ${[1,2,3,4,5,6].map(i=><div class="card tilt" style="height:120px;display:grid;place-items:center;font-weight:700">Card ${i}</div>).join('')}
    </div>
    <div style="margin-top:10px"><button class="btn" data-route="#/projects">Back</button></div>`;
}

/* ===== SERVICE SUB-PAGES ===== */
function renderService(title, tiers){
  servicesOutlet.innerHTML=`
    <div class="grid" style="grid-template-columns:1.1fr .9fr;gap:12px">
      <div>
        <h3>${title}</h3>
        <div class="grid cols-3" id="plans"></div>
      </div>
      <div class="glass">
        <h4>FAQs</h4>
        <details open><summary>Delivery time?</summary><p class="muted">Starter 3-5 days, Pro 1-2 weeks, Elite 3-4 weeks.</p></details>
        <details><summary>Revisions?</summary><p class="muted">Every tier includes fair revisions. Elite has unlimited within scope.</p></details>
        <details><summary>Payment?</summary><p class="muted">50% advance, 50% on delivery. UPI/Bank accepted.</p></details>
        <div style="margin-top:8px"><a class="btn" href="#/contact">Start a Project</a></div>
      </div>
    </div>`;
  const plans=document.getElementById('plans');
  plans.innerHTML=tiers.map(([name,price,desc])=>`
    <div class="card tilt">
      <span class="badge">${price}</span>
      <h4>${name}</h4>
      <p class="muted">${desc}</p>
      <button class="btn" onclick="location.hash='#/contact'">Choose ${name}</button>
    </div>`).join('');
}

/* ===== TILT EFFECT ===== */
(function tilt(){
  const cards=()=>document.querySelectorAll('.tilt');
  const clamp=(n,min,max)=>Math.max(min,Math.min(max,n));
  function onMove(e){
    const r=this.getBoundingClientRect();
    const dx=(e.clientX-r.left)/r.width-.5, dy=(e.clientY-r.top)/r.height-.5;
    this.style.transform=rotateY(${clamp(dx*10,-10,10)}deg) rotateX(${clamp(-dy*10,-10,10)}deg) translateZ(12px);
  }
  function onLeave(){this.style.transform='translateZ(0)'}
  const bind=()=>cards().forEach(c=>{c.addEventL
    istener('mousemove',onMove);c.addEventListener('mouseleave',onLeave)});
  bind(); window.addEventListener('hashchange',()=>setTimeout(bind,60));
})();

/* ===== THEME TOGGLE ===== */
document.getElementById('theme').onclick=()=>{
  const dark=getComputedStyle(document.documentElement).getPropertyValue('--bg1')==='#0b1022';
  if(dark){ // light-ish
    document.documentElement.style.setProperty('--bg1','#f6f8ff');
    document.documentElement.style.setProperty('--bg2','#e9f0ff');
    document.body.style.color='#0a1432';
  }else{
    document.documentElement.style.setProperty('--bg1','#0b1022');
    document.documentElement.style.setProperty('--bg2','#0a1432');
    document.body.style.color='var(--txt)';
  }
  toast('Theme toggled');
}

/* ===== CONTACT FORM (local demo) + vCard ===== */
document.getElementById('year').textContent=new Date().getFullYear();
const form=document.getElementById('contactForm');
if(form){
  form.addEventListener('submit',e=>{
    e.preventDefault();
    const data={name:document.getElementById('name').value,email:document.getElementById('email').value,msg:document.getElementById('msg').value,date:new Date().toISOString()};
    const prev=JSON.parse(localStorage.getItem('messages')||'[]'); prev.push(data);
    localStora
